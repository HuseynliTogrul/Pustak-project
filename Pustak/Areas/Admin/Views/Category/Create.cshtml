@model Category

<form asp-action="Create" method="post" enctype="multipart/form-data" class="ml-3 mr-3">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">ParentCategoryId</label>
        <input asp-for="ParentCategoryId" class="form-control p-1" id="exampleInputPassword1">
        <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>