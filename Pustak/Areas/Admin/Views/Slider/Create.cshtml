@model SliderCreateDto

<form enctype="multipart/form-data" method="post" class="ml-4 mr-4">
    <div class="form-group">
        <label asp-for="File"></label>
        <input class="form-control p-1" asp-for="File" placeholder="Enter icon">
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Title</label>
        <input class="form-control" asp-for="Name" placeholder="Enter Title">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description" placeholder="Enter Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

